<!DOCTYPE html>
<html>
  <head>
    <title>ごはんリスト</title>
  </head>
  <body>
    <h1>ごはんリスト</h1>
    <%= form_with(model: @meal, local: true) do |form| %>
      <%= form.label :name, "ごはん" %>
      <%= form.text_field :name %>
      <%= form.submit %>
    <% end %>
    <% @meals.each do |meal| %>
      <%= meal.name %>
      <%= link_to "削除", meal, method: :delete  %>
      <br>
    <% end %>
  </body>
</html>
